{% extends 'base.html.twig' %}

{% block content %}
    <h1>Les questions à débattre</h1>

    <table class="table table-striped">
        <tr>
            <th>Questions</th>
            <th>Sujets</th>
            <th>Appuis</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>

        {# Affichage des questions ici #}
        {% for question in questions %}
            <tr>
                <td>{{ question.title }}</td>
                <td>{{ question.subjects|join(' | ') }}</td>
                <td>{{ question.supports }}</td>
                <td>{{ question.creationDate|date('d-m-Y H:i:s') }}</td>
                <td><a class="btn btn-primary"
                       href="{{ path('question_detail', {'id': question.id}) }}">Débattre</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block title %}
    Questions à débattre
{% endblock %}

